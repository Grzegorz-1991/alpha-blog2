<h1>Lista artykułów:</h1>

<table>
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Opis</th>
            <th colspan="3">Akcja</th>
        
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |art| %>
        <tr>
            <td><%= art.title %></td>
            <td><%= art.description %></td>
            <td><%= link_to 'Show', article_path(art) %></td>
            <td><%= link_to 'Edit', edit_article_path(art) %></td>
            <td><%= link_to 'Delete', article_path(art), method: :delete, data: { confirm: "Jesteś pewien?"} %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<p>
<%= link_to 'Stwórz nowy artykuł', new_article_path%>
</p>
